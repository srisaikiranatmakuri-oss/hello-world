{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Huffman",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-O2",
                "-o",
                "huffman.exe",
                "huffman.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run Huffman",
            "type": "shell",
            "command": ".\\huffman.exe",
            "dependsOn": "Compile Huffman",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
